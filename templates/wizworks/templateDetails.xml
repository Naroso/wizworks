<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install PUBLIC "-//Joomla! 2.5//DTD template 1.0//EN" "https://www.joomla.org/xml/dtd/2.5/template-install.dtd">
<extension version="3.1" type="template" client="site">
    <name>wizworks</name>
    <version>1.0</version>
    <creationDate>84/24/2016</creationDate>
    <author>Neo Hoang</author>
    <authorEmail>admin@wizweb.io</authorEmail>
    <copyright>Copyright (C) 2005 - 2016 Open Source Matters, Inc. All rights reserved.</copyright>
    <description>TPL_WIZWORKS_XML_DESCRIPTION</description>
    <files>
        <filename>component.php</filename>
        <filename>error.php</filename>
        <filename>offline.php</filename>
        <filename>favicon.ico</filename>
        <filename>index.php</filename>
        <filename>templateDetails.xml</filename>
        <filename>template_preview.png</filename>
        <filename>template_thumbnail.png</filename>
        <folder>css</folder>
        <folder>html</folder>
        <folder>images</folder>
        <folder>js</folder>
        <folder>language</folder>
        <folder>less</folder>
    </files>
    <positions>
        <position>nav-global</position>
        <position>top-1</position>
        <position>top-2</position>
        <position>top-3</position>
        <position>bottom-1</position>
        <position>bottom-2</position>
        <position>bottom-3</position>
    </positions>
    <languages folder="language">
        <language tag="en-GB">en-GB/en-GB.tpl_wizworks.ini</language>
        <language tag="en-GB">en-GB/en-GB.tpl_wizworks.sys.ini</language>
    </languages>
    <config>
        <fields name="params">
            <fieldset name="advanced">
                <field name="templateColor" class="" type="color" default="#08C"
                                       label="TPL_WIZWORKS_COLOR_LABEL"
                                       description="TPL_WIZWORKS_COLOR_DESC" />

                <field name="templateBackgroundColor" class="" type="color" default="#F4F6F7"
                                       label="TPL_WIZWORKS_BACKGROUND_COLOR_LABEL"
                                       description="TPL_WIZWORKS_BACKGROUND_COLOR_DESC" />

                <field name="logoFile" class="" type="media" default=""
                                       label="TPL_WIZWORKS_LOGO_LABEL"
                                       description="TPL_WIZWORKS_LOGO_DESC" />

                <field name="sitetitle"  type="text" default=""
                                       label="JGLOBAL_TITLE"
                                       description="JFIELD_ALT_PAGE_TITLE_LABEL"
                                       filter="string" />

                <field name="sitedescription"  type="text" default=""
                                       label="JGLOBAL_DESCRIPTION"
                                       description="JGLOBAL_SUBHEADING_DESC"
                                       filter="string" />

                <field name="googleFont"
                                       type="radio"
                                       class="btn-group btn-group-yesno"
                                       default="1"
                                       label="TPL_WIZWORKS_FONT_LABEL"
                                       description="TPL_WIZWORKS_FONT_DESC"
                >
                    <option value="1">JYES</option>
                    <option value="0">JNO</option>
                </field>

                <field name="googleFontName" class="" type="text" default="Open+Sans"
                                       label="TPL_WIZWORKS_FONT_NAME_LABEL"
                                       description="TPL_WIZWORKS_FONT_NAME_DESC" />

                <field name="fluidContainer"
                                       type="radio"
                                       class="btn-group btn-group-yesno"
                                       default="0"
                                       label="TPL_WIZWORKS_FLUID_LABEL"
                                       description="TPL_WIZWORKS_FLUID_DESC"
                >
                    <option value="1">TPL_WIZWORKS_FLUID</option>
                    <option value="0">TPL_WIZWORKS_STATIC</option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
